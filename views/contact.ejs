    <body>
        <%- include('partials/nav') %>
        <h1>Contact US</h1>
        <form id = "contact-form" method = "POST" action = "/contact">
            <div>
            <label for="who">who do you want to contact?</label>
            </div>
            <div>
            <input type="text" id="who" name="who" placeholder="who do you want to contact?" value="<%= qs.person %>">
            </div>
            <div>
            <label for="department">Which department?</label>
            </div>
            <div>
            <input type="text" id="department" name="department" placeholder="Which department?" value="<%= qs.dept %>">   
            </div>
            <div>
            <label for="email">Your email address</label>
            </div>
            <div>
            <input type="email" id="email" name="email" placeholder="Your email address"/>
            </div>
            <div>
            <input type = "submit" value = "submit"/>
            </div>
        </form>


    </body>
</html>